  "peerDependencies": {
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0",
    "@blockle/blocks-core": "^0.21.0",
    "@blockle/blocks-react-slot": "^1.0.0",
    "@vanilla-extract/css": "^1.17.1"
  }
