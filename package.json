{
  "name": "blocks",
  "private": true,
  "description": "Blocks design system",
  "repository": {
    "type": "git",
    "url": "git@github.com:Blockle/blocks.git"
  },
  "license": "MIT",
  "author": "Niek Saarberg <n.saarberg@gmail.com>",
  "type": "module",
  "workspaces": [
    "packages/core",
    "packages/reset",
    "packages/slot",
    "packages/react",
    "packages/blocks",
    "packages/theme-momotaro"
  ],
  "scripts": {
    "build-storybook": "storybook build",
    "dev": "turbo build -- --watch",
    "build": "turbo build --force",
    "changeset": "changeset",
    "coverage": "vitest run --coverage",
    "format": "biome check ./packages/*/src --write",
    "link": "npm link --workspaces",
    "lint": "biome check ./packages/*/src",
    "release": "npm run build && npm run ts && npm run test && changeset publish",
    "storybook": "storybook dev -p 6006 --no-open",
    "test": "vitest",
    "ts": "tsc --noemit --project ./tsconfig.json && npm run ts --workspaces",
    "update-peer-deps": "node scripts/update-peer-deps.js",
    "version": "changeset version && node scripts/post-version-hook.js"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@changesets/cli": "^2.6.0",
    "@storybook/addon-a11y": "^10.0.7",
    "@storybook/addon-links": "^10.0.7",
    "@storybook/react-vite": "^10.0.7",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vanilla-extract/css": "^1.17.4",
    "@vanilla-extract/css-utils": "^0.1.6",
    "@vanilla-extract/vite-plugin": "^5.1.1",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "@vitest/coverage-v8": "^4.0.9",
    "@vitest/ui": "^4.0.4",
    "autoprefixer": "^10.4.22",
    "cross-env": "^10.1.0",
    "glob": "^11.0.3",
    "jsdom": "^27.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "rollup-preserve-directives": "^1.1.3",
    "storybook": "^10.0.7",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-externalize-deps": "^0.10.0",
    "vitest": "^4.0.4"
  },
  "peerDependencies": {
    "@vanilla-extract/css": ">=1.14",
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  },
  "overrides": {
    "nwsapi": "2.2.2"
  },
  "packageManager": "npm@10.9.0"
}
