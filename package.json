{
  "name": "@blockle/blocks",
  "version": "0.20.0-alpha1",
  "description": "Blocks design system",
  "repository": "git@github.com:Blockle/blocks.git",
  "license": "MIT",
  "author": "Niek Saarberg <n.saarberg@gmail.com>",
  "sideEffects": [
    "**/entries/reset.ts",
    "**/reset/**",
    "*.css.*",
    "dist/reset.*",
    "dist/side-effects/**"
  ],
  "type": "module",
  "workspaces": ["packages/theme", "packages/blocks"],
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.mts",
        "require": "./dist/index.d.ts"
      },
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./reset": {
      "types": {
        "import": "./dist/reset.d.mts",
        "require": "./dist/reset.d.ts"
      },
      "import": "./dist/reset.mjs",
      "require": "./dist/reset.cjs"
    },
    "./themes/momotaro": {
      "types": {
        "import": "./dist/themes/momotaro.d.mts",
        "require": "./dist/themes/momotaro.d.ts"
      },
      "import": "./dist/themes/momotaro.mjs",
      "require": "./dist/themes/momotaro.cjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": ["dist", "reset", "themes/momotaro"],
  "scripts": {
    "build": "npm run build --workspaces",
    "build-storybook": "storybook build",
    "changeset": "changeset",
    "coverage": "vitest run --coverage",
    "fix": "crackle fix",
    "lint": "biome format ./src",
    "lint:fix": "biome format --write ./src",
    "release": "npm run ts && npm run test && npm run build && changeset publish",
    "storybook": "storybook dev -p 6006 --no-open",
    "test": "vitest --silent",
    "ts": "tsc --noemit --project ./tsconfig.json"
  },
  "resolutions": {
    "string-width": "^4.2.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/cli": "^2.27.12",
    "@chromatic-com/storybook": "^3.2.4",
    "@crackle/cli": "^0.15.5",
    "@crackle/core": "^0.33.3",
    "@storybook/addon-a11y": "^8.5.3",
    "@storybook/addon-coverage": "^1.0.5",
    "@storybook/addon-essentials": "^8.5.3",
    "@storybook/addon-interactions": "^8.5.3",
    "@storybook/addon-links": "^8.5.3",
    "@storybook/blocks": "^8.5.3",
    "@storybook/preview-api": "^8.5.3",
    "@storybook/react": "^8.5.3",
    "@storybook/react-vite": "^8.5.3",
    "@storybook/test": "^8.5.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vanilla-extract/css": "^1.17.1",
    "@vanilla-extract/css-utils": "^0.1.4",
    "@vanilla-extract/sprinkles": "^1.6.2",
    "@vanilla-extract/vite-plugin": "^5.0.0",
    "@vitejs/plugin-react-swc": "^3.7.2",
    "@vitest/coverage-v8": "^3.0.4",
    "autoprefixer": "^10.4.19",
    "cross-env": "^7.0.3",
    "jsdom": "^26.0.0",
    "prop-types": "^15.8.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "storybook": "^8.5.3",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vite-plugin-dts": "^4.5.0",
    "vite-plugin-externalize-deps": "^0.9.0",
    "vitest": "^3.0.4"
  },
  "peerDependencies": {
    "@vanilla-extract/css": ">=1.14",
    "@vanilla-extract/sprinkles": ">=1.6",
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  },
  "overrides": {
    "nwsapi": "2.2.2"
  }
}
